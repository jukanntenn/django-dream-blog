{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Django",
      "type": "shell",
      "command": "uv",
      "args": ["run", "python", "manage.py", "runserver"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": false,
        "group": "dev-servers"
      },
      "problemMatcher": [],
      "isBackground": true,
      "icon": { "id": "server", "color": "terminal.ansiGreen" }
    },
    {
      "label": "Start Vite",
      "type": "shell",
      "command": "pnpm",
      "args": ["dev"],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": false,
        "group": "dev-servers"
      },
      "problemMatcher": [],
      "isBackground": true,
      "icon": { "id": "zap", "color": "terminal.ansiYellow" }
    },
    {
      "label": "Start All",
      "dependsOn": ["Start Django", "Start Vite"],
      "dependsOrder": "parallel",
      "problemMatcher": [],
      "icon": { "id": "rocket", "color": "terminal.ansiBlue" }
    }
  ]
}
